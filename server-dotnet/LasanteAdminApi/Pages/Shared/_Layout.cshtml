<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@ViewData["Title"] - Admin La Santé</title>
  <link rel="stylesheet" href="/assets/css/brand.css" />
  <style>
    .admin-shell{max-width:1100px;margin:0 auto;padding:16px}
    .admin-top{display:flex;align-items:center;justify-content:space-between;gap:12px;margin:10px 0 18px}
    .admin-nav{display:flex;gap:8px;flex-wrap:wrap}
    .admin-nav a{padding:.45rem .7rem;border-radius:10px;border:1px solid var(--border)}
    .admin-nav a:hover{background:var(--surface-2);text-decoration:none}
    input,textarea,select{width:100%;padding:.7rem;border:1px solid var(--border);border-radius:12px}
  </style>
</head>
<body>
  <div class="admin-shell">
    <div class="admin-top">
      <div>
        <div class="kicker">Administrador</div>
        <h1 style="margin:0">Panel de Contenidos</h1>
        <p style="margin:6px 0 0;color:var(--muted-2)">Gestiona Noticias y Vacantes con permisos por rol.</p>
      </div>
      <form method="post" action="/admin/auth/logout">
        <button class="btn ghost" type="submit">Cerrar sesión</button>
      </form>
    </div>

    <nav class="admin-nav" aria-label="Admin">
      <a href="/admin/dashboard">Dashboard</a>
      <a href="/admin/noticias">Noticias</a>
      <a href="/admin/vacantes">Vacantes</a>
    </nav>

    <main style="margin-top:16px">
      @RenderBody()
    </main>
  </div>
</body>
</html>
